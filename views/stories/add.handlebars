<h1>Add Story</h1>
<div class="row">
    <form action="/stories" class="col s12" method="post">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title">
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <select name="status" id="statusBooleanId">
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    <option value="unpublished">Unpublished</option>
                </select>
                <label for="status">Status</label>
            </div>
        </div>
        <div class="row">
            <p>
                <input id="filledInBox"
                    type="checkbox"
                    name="allowComments"
                    class="filled-in"
                    checked="checked">
                    <label for="filledInBox">Allow Comments</label>
            </p>
        </div>
        <div class="row">
            <div class="input-field">
                <h5>Story Details</h5>
                <textarea type="textArea" name="body"></textarea>
            </div>
        </div>

        <input type="submit" value="Save" class="btn">
    </form>
</div>