<h1>Stories</h1>
<div class="row">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{#if user}}
                        {{{editIcon user.id ../user.id id}}}
                    {{/if}}
                </div>
                <div class="card-title center-align">{{title}}</div>
                <div class="card-content center-align">
                    <p class="story-text">{{{stripTags (truncate body 150)}}}</p><br/>
                </div>
                 <div class="chip">
                    <img src="{{user.image}}" alt="user contact image">
                    <a href="/stories/user/{{user.id}}">
                        {{user.firstName}} {{user.lastName}}
                    </a>
                </div>
                <div class="card-action center-align">
                    <a href="/stories/show/{{id}}" class="btn grey">Read More</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No stories found</p>
    {{/each}}
</div>