<h1>Edit Story</h1>
<div class="row">
    <form action="/stories/{{story.id}}?_method=PUT" class="col s12" method="post">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title" value="{{story.title}}">
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <select name="status" id="statusBooleanId">
                    {{#select strory.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    <option value="unpublished">Unpublished</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>
        <div class="row">
            <p>
                <input id="filledInBox"
                    type="checkbox"
                    name="allowComments"
                    class="filled-in"
                    {{#if story.allowComments}} checked="checked" {{/if}}>
                    <label for="filledInBox">Allow Comments</label>
            </p>
        </div>
        <div class="row">
            <div class="input-field">
                <h5>Story Details</h5>
                <textarea type="textArea" name="body">{{story.body}}</textarea>
            </div>
        </div>

        <input type="submit" value="Save" class="btn">
    </form>
</div>